@model List<BookCave.Models.ViewModels.BookListViewModel>
<h1>Bækur</h1>
        <li class="dropdown">
<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Raða eftir <span class="caret"></span></a>
<ul class="dropdown-menu" id="list-menu">
                <li><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="Stafrodsrod">Stafrófsröð</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="LH">Verð lægra til hærra</a></li>
