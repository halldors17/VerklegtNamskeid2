@model BookCave.Models.ViewModels.BookDetailViewModel
@using Microsoft.AspNetCore.Identity

<div class="container">
    <div class="row"></div>
        <div class="col-lg-2 cl-md-2 col-sm-3 col-xs-6 text-center">
            <img src="@Model.Image"  height="200" width="120" /><br>
            <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a><br>
                @foreach(var a in @Model.AuthorList)
            {
                <a asp-controller="Author" asp-action="Details" asp-route-id="@a.Id">@a.Name</a> <br>
            }
            <p>Verð: @Model.Price $</p>
            <p>Einkunn: @Model.Rating</p>
            
            @foreach(var c in @Model.CategoryList)
            {
                <a asp-controller="Category" asp-action="Details" asp-route-id="@c.Id">@c.Name</a> <br>

            }
        </div>
        <div class="col-lg-2 cl-md-2 col-sm-3 col-xs-6 text-center">
            @if(@Model.Paperback)
            {
                <button class="btn btn-default">Kilja</button>
            }
            @if(@Model.Ebook)
            {
                <button class="btn btn-default">Rafbók</button>
            }
            @if(@Model.Audio)
            {
                <button class="btn btn-default">Hljóðbók</button>
            }
            <input type="button" class="btn btn-primary" value="Setja í körfu" onclick="addToCart(@Model.Id)">
            <input type="button" class="btn btn-default" value="Setja í uppáhalds">
            <input type="button" class="btn btn-default" value="Setja á óskalist">
        </div>
        <div class="col-lg-4 cl-md-4 col-sm-3 col-xs-6 text-center">
            <h3>Umsagnir</h3>
            <h4>Meðaltal einkunna frá notendum: @Model.UserAvgRating</h4>
            <div class="overflow">
            @foreach(var c in @Model.BookComments)
            {
                <div>
                    <p>@c.Rating </p>
                    <p>@c.BookComment</p> <br>
                </div>
            }
            </div>
        </div>
    </div>
    @if(User.IsInRole("User"))
    {
    <div class="jumbotron">
        <form method="POST" asp-controller="Book" asp-action="Details">
            <div class="form-group">
                <label for="Comment">Umsögn</label>
                <input type="text" for="Comment" name="Comment" class="form-control">
            </div>
            <p>Einkunn</p>
            <div class="btn-group btn-warning" data-toggle="buttons">
                <label class="btn btn-secondary active">
                    <input type="radio" name="Rating" value="1" autocomplete="off" checked>
                    <span class="glyphicon glyphicon-star"></span>
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="Rating" value="2" autocomplete="off">
                    <span class="glyphicon glyphicon-star"></span>
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="Rating" value="3" autocomplete="off">
                    <span class="glyphicon glyphicon-star"></span>
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="Rating" value="4" autocomplete="off">
                    <span class="glyphicon glyphicon-star"></span>
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="Rating" value="5" autocomplete="off">
                    <span class="glyphicon glyphicon-star"></span>
                </label>
            </div><br><br>
            <button type="submit" class="btn btn-default">Skrá umsögn</button>
        </form>
    </div>
    }
</div>