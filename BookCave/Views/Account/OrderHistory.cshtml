@model List<BookCave.Models.ViewModels.OrderListViewModel>

<h1>Pantanir</h1>
<a asp-controller="Account" asp-action="MyAccount"><button class="btn btn-info">Til baka</button></a>
<div class="container">
    <div class="row"></div>
        @foreach(var order in @Model)
        {
            <div class="col-lg-4 cl-md-4 col-sm-3 col-xs-6 text-center">
                <!--<input type="button" class="btn btn-default" value="Order: @order.Id" onclick="orderDetails(@order.Id)">-->
                <a asp-controller="Account" asp-action="OrderDetails" asp-route-id="@order.Id"><button class="btn btn-info">Order: @order.Id</button></a>
                <p>Total price: @order.Total</p>
                <p>Paid date: @order.PaidDate</p>
            </div>
        }
    </div>
</div>