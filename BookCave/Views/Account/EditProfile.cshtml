@model BookCave.Models.InputModels.AccountInputModel
<h1>Notenda uppl√Ωsingar</h1>
<div class="jumbotron">
    <form method="POST" asp-controller="Account" asp-action="EditProfile" class="form-horizontal">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" value="@Model.FirstName">
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" value="@Model.LastName">
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" value="@Model.Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input type="number" asp-for="Age" class="form-control" value="@Model.Age">
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control" value="@Model.Image">
            <span asp-validation-for="Image"></span>
        </div>
        <div class="form-group">
            <label asp-for="FavBook"></label>
            <input asp-for="FavBook" class="form-control" value="@Model.FavBook">
            <span asp-validation-for="FavBook"></span>
        </div>
        <div class="form-group"><input type="submit" value="Breyta" class="btn btn-info"></div>
    </form>
</div>