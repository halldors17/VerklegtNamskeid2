@model List<BookCave.Models.ViewModels.CartViewModel>

@ViewBag.Title
<h1>Karfa</h1>
<div class="container">
    <div class="row"></div>
        <div class="col-lg-12 cl-md-6 col-sm-6 col-xs-6">
            <table id="cart-table" class="table table-striped table-hover">
                <tr>
                    <th>Mynd</th>
                    <th>Titill</th>
                    <th>Magn</th>
                    <th>Afsláttur</th>
                    <th>Verð</th>
                    <th></th>
                </tr>
                @foreach(var item in @Model)
                {
                    <tr>
                        <td><img src="@item.Image"  height="200" width="120" /></td>
                        <td>@item.Title</td>
                        <td><input class="quantity"type="text" asp-for="@item.Quantity"><button data-bookid="@item.BookId" class="update-quantity-btn btn btn-info">Uppfæra</button></td>
                        <td>@item.Discount %</td>
                        <td>@item.Price $</td>
                        <td><a asp-controller="Account" asp-action="RemoveCart" asp-route-id="@item.Id"><button class="btn btn-info">Fjarlægja út körfu</button></a></td>
                    </tr>
                }
            </table>
            <h3>Heildarverð: @ViewBag.TotalPrice $</h3>
            @if(@Model.Count > 0)
            {
                <a asp-controller="Account" asp-action="ReviewOrder"><button id="cart-btn" class="btn btn-primary">Ganga frá pöntun</button></a>
            }
        </div>
    </div>
</div>
