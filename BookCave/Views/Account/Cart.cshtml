@model List<BookCave.Models.ViewModels.CartViewModel>

<h1>Karfa</h1>
<div class="container">
    <div class="row"></div>
        <div class="col-lg-12 cl-md-6 col-sm-6 col-xs-6">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Mynd</th>
                    <th>Titill</th>
                    <th>Magn</th>
                    <th>Afsláttur</th>
                    <th>Verð</th>
                    <th></th>
                </tr>
                @foreach(var item in @Model)
                {
                    <tr>
                        <td><img src="@item.Image"  height="200" width="120" /></td>
                        <td>@item.Title</td>
                        <td>Magn: @item.Quantity</td>
                        <td>@item.Discount %</td>
                        <td>@item.Price $</td>
                        <td><input type="button" class="btn btn-default" value="Fjarlægja úr körfu" onclick="removeCart(@item.Id)"></td>
                    </tr>
                }
            </table>
            <button class="btn btn-primary"><a asp-controller="Account" asp-action="ReviewOrder">Ganga frá pöntun</a></button>
        </div>
    </div>
</div>
