@model BookCave.Models.ViewModels.OrderDetailViewModel

<h1>Pöntun @Model.Id</h1>
<a asp-controller="Account" asp-action="OrderHistory"><button class="btn btn-default">Til baka</button></a>
<div class="container">
    <div class="row"></div>
            <div class="col-lg-4 cl-md-4 col-sm-3 col-xs-6">
                <h3>Almennt</h3>
                <p>Heildar verð: @Model.Total</p>
                <p>Dagsetning borgað: @Model.PaidDate</p>
            </div>
            <div class="col-lg-4 cl-md-4 col-sm-3 col-xs-6">
                <h3>Bækur</h3>
                @foreach(var item in @Model.OrderItems)
                {
                    <p>Bók: @item.Title</p>
                    <p>Verð: @item.Price</p>
                    <p>Magn: @item.Quantity </p>
                }
            </div>
    </div>
</div>