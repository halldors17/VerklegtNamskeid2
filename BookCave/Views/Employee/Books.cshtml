@model List<BookCave.Models.ViewModels.BookSalesViewModel>
<h1>Bækur</h1>

<div class="container">
    <div class="row">
        @foreach(var book in @Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <img src="@book.Image"  height="200" width="120" /><br>
            </div>
            <div class="book-sales-div col-lg-4 col-md-6 col-sm-6 col-xs-12" style="height: 250px; width: 700px">
                <h4>@book.Title<br></h4>
                <p>@book.Author</p>
                <p>@book.Publisher</p>
                <a asp-controller="Employee" asp-action="SalesBook" asp-route-id="@book.Id"><button class="btn btn-default">Sjá sölutölur</button></a>
                <a asp-controller="Employee" asp-action="ChangeBook" asp-route-id="@book.Id"><button class="btn btn-default">Breyta</button></a>
                <a asp-controller="Employee" asp-action="RemoveBook" asp-route-id="@book.Id"><button class="btn btn-default">Fjarlægja</button></a>
            </div>
        }
    </div>
</div>
