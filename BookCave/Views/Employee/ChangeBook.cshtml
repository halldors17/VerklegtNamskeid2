@model BookCave.Models.InputModels.InputBookModel
<h1>Breyta bók</h1>

<div class="jumbotron">
    <form method="POST" asp-controller="Employee" asp-action="ChangeBook">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="AuthorId">Höfundur</label>
            <select asp-for="AuthorId" class="author-list"></select>
        </div>
            <div class="form-group">
            <label asp-for="Image">Mynd</label>
            <input asp-for="Image" class="form-control">
            <span asp-validation-for="Image"></span>
        </div>
        <div class="form-group">
            <label asp-for="Publisher">Útgáfufélag</label>
            <input asp-for="Publisher" class="form-control">
            <span asp-validation-for="Publisher"></span>
        </div>
           <div class="form-group">
            <label asp-for="YearPublished">Útgáfuár</label>
            <input asp-for="YearPublished" class="form-control">
            <span asp-validation-for="YearPublished"></span>
        </div>
        </div>
            <div class="form-group">
            <label asp-for="Rating">Einkunn</label>
            <input asp-for="Rating" class="form-control">
            <span asp-validation-for="Rating"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId">Flokkur</label>
            <select asp-for="CategoryId" class="category-list"></select>
        </div>
        <div class="form-group">
            <label asp-for="Pages">Blaðsíður</label>
            <input asp-for="Pages" class="form-control">
            <span asp-validation-for="Pages"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Lýsing</label>
            <input type="textbox" asp-for="Description" class="form-control">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Verð</label>
            <input type="textbox" asp-for="Price" class="form-control">
            <span asp-validation-for="Price"></span>
        </div>
            <div class="form-group">
            <label asp-for="Discount">Afsláttur</label>
            <input asp-for="Discount" class="form-control">
            <span asp-validation-for="Discount"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info">Vista breytingar</button>
        </div>
    </form>
</div>