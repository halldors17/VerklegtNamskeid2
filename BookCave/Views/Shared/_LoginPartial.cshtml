@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using BookCave.Models
@using BookCave.Data

@inject SignInManager<ApplicationUser> SignInManager

@{
    var claim = ((ClaimsIdentity) User.Identity).Claims.FirstOrDefault(c => c.Type == "Name")?.Value;
}

@if(SignInManager.IsSignedIn(User))
{
    <form method="POST" asp-action="Logout" asp-controller="Account">
        <ul class="nav navbar-nav navbar-right">
            <li><button class="btn btn-link navbar-btn navbar-link"></button></li>
            <li><button type="submit" class="btn btn-link navbar-btn navbar-link">Log out <span class="glyphicon glyphicon-user"></span></button></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register">Nýskráning</a></li>
        <li><a asp-controller="Account" asp-action="Login">Innskráning <span class="glyphicon glyphicon-user"></span></a></li>
    </ul>
}